<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Renk Paleti -->
    <Color   x:Key="PrimaryColor">#616768</Color>
    <Color   x:Key="AccentColor">#616768</Color>
    <Color   x:Key="BackgroundColor">#FFFFFF</Color>
    <Color   x:Key="TextColor">#333333</Color>
    <SolidColorBrush x:Key="PrimaryBrush"    Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="AccentBrush"     Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush"       Color="{StaticResource TextColor}"/>

    <!-- Font Ayarları -->
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <sys:Double x:Key="AppFontSizeSmall">12</sys:Double>
    <sys:Double x:Key="AppFontSizeNormal">14</sys:Double>
    <sys:Double x:Key="AppFontSizeLarge">18</sys:Double>

    <!-- Pencere Stili -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource AppFontSizeNormal}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <!-- Başlık / TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
    </Style>

    <!-- Buton Stili -->
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="{StaticResource AppFontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- TextBox Stili -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="{StaticResource AppFontSizeNormal}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="#FFF"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="2"/>
    </Style>

    <!-- DataGrid Stili -->
    <Style TargetType="DataGrid">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource AppFontSizeSmall}"/>
    </Style>

</ResourceDictionary>
